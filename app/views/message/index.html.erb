<h4>Your comments</h4>

<% if current_user.messages.empty? %>

    <p class="text-general text-reading">
     You don't have any comments yet...
    </p>

  <% else %>

    <div class="table-responsive">
      <table class="table table-striped table-text">
        <thead>
          <tr>
            <th>#</th>
            <th>Content</th>
            <th>Date of Create</th>
            
            <th>Link</th>
          </tr>
        </thead>


        <tbody>
          <% @messages.each do |comment| %>
        
            <tr>
              <td><%= message.id %></td>
              <td><%= message.content %></td>
              <td><%= message.created_at %></td>
              
              <td><%= link_to "Link to this message", message, :class => "btn btn-xs btn-info" %></td>
            </tr> 
          <% end %>
        </tbody>
      </table>
    </div>

    <script>
    $( "p" ).append( message.content;
    </script>

  <% end %>
