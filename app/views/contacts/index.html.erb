<h4>Your comments</h4>

<% if current_user.comments.empty? %>

    <p class="text-general text-reading">
     You don't have any comments yet...
    </p>

  <% else %>

    <div class="table-responsive">
        <table class="table table-striped table-text">
            <thead>
                <tr>
                  <th>#</th>
                  <th>Content</th>
                  <th>Date of Create</th>
                  
                  <th>Link</th>
                </tr>
            </thead>


            <tbody>
            <% @comments.each do |comment| %>
            
                <tr>
                  <td><%= comment.id %></td>
                  <td><%= comment.content %></td>
                  <td><%= comment.created_at %></td>
                  
                  <td><%= link_to "Link to this comment", comment, :class => "btn btn-xs btn-info" %></td>
                </tr> 
            <% end %>
            </tbody>
        </table>
      </div>

    <script>
    $( "p" ).append( comment.content;
    </script>

  <% end %>
