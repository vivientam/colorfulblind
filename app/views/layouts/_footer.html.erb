          <p><%= link_to "Size Chart", sizechart_path, :class => "size_chart" %></p>
          <p><%= link_to "Return Policy", return_policy_path, :class => "return_policy" %></p>
          <p><%= link_to "Contact Us", contact_path, :class => "contact" %></p>
