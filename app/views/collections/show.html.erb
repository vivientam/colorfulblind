<header class="row">
  <h1 class="col-md-8 col-md-offset-2 col-xs-12 bold-text"><%= @collection.name %> Collection</h1>
</header>

<div class="row">
  <div class="col-xs-12 box">

    <% @apparels.each do |apparel| %>
  
      <div class="row">
        
        <div class="col-xs-5 collection-image">
          <!-- add alt to the image to explain what it is -->
          <%= image_tag("apparels/#{apparel.id}.jpg") %>
        </div> 
      
      
        <div class="col-xs-6">  
          <!-- add link role to the link -->
          <h2 class="apparel-name"><%= link_to apparel.name, apparel, :class => "apparel-link" %></h2>
        </div>  

      </div>
        
    <% end %>  
  </div>
</div>


