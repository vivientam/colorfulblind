<h1 class="heading">A list of users:</h1>


  
  <div class="table-responsive">
    <table class="table table-striped table-text">
        <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Address</th>
              <th>Email</th>
              <th>Credit Card No</th>
              <th>Credit Card Expiry Date</th>
              <th>Link</th>
            </tr>
        </thead>


        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.title %></td>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.address %></td>
              <td><%= user.email %></td>
              <td><%= user.credit_card_no %></td>
              <td><%= user.credit_card_expiry_date %></td>
              <td><%= user.created_at %></td>
              <td><%= link_to "Link to this user", user, :class => "btn btn-xs btn-info" %></td>
            </tr> 
        <% end %>
        </tbody>
    </table>
  </div>
